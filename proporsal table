CREATE TABLE proposals (
    id INT AUTO_INCREMENT PRIMARY KEY, -- Unique ID for each proposal
    email VARCHAR(255) NOT NULL, -- Email to reference the student
    proposal_status VARCHAR(50) NOT NULL, -- Status of the proposal (e.g., 'Pending', 'Approved', 'Rejected')
    proposal_file_path VARCHAR(500) NOT NULL, -- Path to the uploaded proposal file
    proposal_upload_date DATE NOT NULL, -- Date the proposal was uploaded
    FOREIGN KEY (email) REFERENCES students(email) -- Foreign key linking to the students table
        ON DELETE CASCADE
        ON UPDATE CASCADE
);
